{
  "compilerOptions": {
    "outDir": "./lib",
    "rootDir": "./src",
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "lib": [
      "ES2020",
      "DOM"
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "lib",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/__tests__/**/*"
  ]
}
