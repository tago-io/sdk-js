{
  "$schema": "https://biomejs.dev/schemas/2.1.3/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "includes": [
      "**/*.ts",
      "**/*.tsx",
      "**/*.js",
      "**/*.jsx",
      "**/*.mjs",
      "**/*.cjs",
      "!**/examples/**",
      "!**/lib/**",
      "!**/docs/**",
      "!**/node_modules/**",
      "!**/build/**",
      "!**/out/**",
      "!**/coverage/**",
      "!**/.cache/**",
      "!**/*.tgz",
      "!**/*.local.*"
    ]
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 120,
    "lineEnding": "lf"
  },
  "assist": { "actions": { "source": { "organizeImports": "on" } } },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "useImportExtensions": "error",
        "noUnusedVariables": "error"
      },
      "suspicious": {
        "noExplicitAny": "warn"
      },
      "style": {
        "noUnusedTemplateLiteral": "error",
        "useConst": "error"
      }
    }
  },
  "overrides": [
    {
      "includes": ["**/__tests__/**/*.ts", "**/*.test.ts", "**/*.local.ts"],
      "linter": {
        "rules": {
          "correctness": {
            "noUnusedVariables": "off"
          },
          "suspicious": {
            "noExplicitAny": "off"
          }
        }
      }
    },
    {
      "includes": [
        "**/src/modules/Migration/**/*.ts",
        "**/src/modules/Utils/router/**/*.ts",
        "**/src/modules/Resources/**/*.types.ts",
        "**/src/common/**/*.ts",
        "**/src/infrastructure/**/*.ts",
        "**/src/modules/Analysis/**/*.ts",
        "**/src/modules/Utils/sendDownlink.ts",
        "**/src/modules/Utils/updateMultipleDropdown.ts",
        "**/src/modules/Dictionary/**/*.ts",
        "**/src/modules/Network/**/*.ts",
        "**/src/modules/Resources/**/*.ts",
        "**/src/modules/Services/**/*.ts",
        "**/src/modules/RunUser/**/*.ts"
      ],
      "linter": {
        "rules": {
          "suspicious": {
            "noExplicitAny": "off"
          },
          "complexity": {
            "noBannedTypes": "off"
          }
        }
      }
    }
  ],
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "trailingCommas": "es5",
      "semicolons": "always",
      "arrowParentheses": "always",
      "bracketSpacing": true,
      "quoteProperties": "asNeeded"
    }
  }
}
