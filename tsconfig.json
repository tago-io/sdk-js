{
  "compilerOptions": {
    "outDir": "./lib",
    "rootDir": "./src",
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "isolatedDeclarations": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "lib": [
      "ES2020",
      "DOM"
    ],
    "types": [
      "vitest/globals"
    ]
  },
  "include": [
    "src",
  ],
  "exclude": [
    "lib",
  ]
}
